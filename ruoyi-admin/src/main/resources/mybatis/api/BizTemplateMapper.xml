<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.api.mapper.BizTemplateMapper">
    
    <resultMap type="com.ruoyi.api.domain.BizTemplate" id="BizTemplateResult">
        <id     property="templateId"       column="template_id"        />
        <result property="templateName"     column="template_name"      />
        <result property="note"             column="note"               />
        <result property="status"           column="status"             />
        <result property="delFlag"          column="del_flag"           />
        <result property="createBy"         column="create_by"          />
        <result property="createTime"       column="create_time"        />
        <result property="updateBy"         column="update_by"          />
        <result property="updateTime"       column="update_time"        />
        <result property="remark"           column="remark"             />
    </resultMap>

    <resultMap type="com.ruoyi.api.domain.BizTemplate" id="BizTemplateWithRelationsResult" extends="BizTemplateResult">
        <association property="templatePrice" javaType="com.ruoyi.api.domain.BizTemplatePrice">
            <id     property="templatePriceId"  column="template_price_id"  />
            <result property="templateId"       column="tp_template_id"     />
            <result property="defaultItemId"    column="default_item_id"    />
            <association property="defaultItem" javaType="com.ruoyi.api.domain.BizTemplateItem">
                <id     property="templateItemId"   column="default_item_item_id"   />
                <result property="itemName"         column="default_item_name"      />
                <result property="size"             column="default_item_size"      />
            </association>
        </association>
    </resultMap>

    <resultMap type="com.ruoyi.api.domain.BizTemplate" id="BizTemplateFullResult" extends="BizTemplateWithRelationsResult">
        <collection property="templateItems" ofType="com.ruoyi.api.domain.BizTemplateItem">
            <id     property="templateItemId"   column="ti_template_item_id"    />
            <result property="itemName"         column="ti_item_name"           />
            <result property="size"             column="ti_size"                />
            <result property="status"           column="ti_status"              />
        </collection>
    </resultMap>

    <sql id="selectBizTemplateVo">
        select template_id, template_name, note, status, del_flag, create_by, create_time, update_by, update_time, remark 
        from biz_template
    </sql>

    <select id="selectBizTemplateById" parameterType="Long" resultMap="BizTemplateResult">
        <include refid="selectBizTemplateVo"/>
        where template_id = #{templateId} and del_flag = '0'
    </select>

    <select id="selectBizTemplateByIdWithRelations" parameterType="Long" resultMap="BizTemplateWithRelationsResult">
        select 
            t.template_id, t.template_name, t.note, t.status, t.del_flag, 
            t.create_by, t.create_time, t.update_by, t.update_time, t.remark,
            tp.template_price_id, tp.template_id as tp_template_id, tp.default_item_id,
            di.template_item_id as default_item_item_id, di.item_name as default_item_name, di.size as default_item_size
        from biz_template t
        left join biz_template_price tp on t.template_id = tp.template_id and tp.del_flag = '0'
        left join biz_template_item di on tp.default_item_id = di.template_item_id and di.del_flag = '0'
        where t.template_id = #{templateId} and t.del_flag = '0'
    </select>

    <select id="selectBizTemplateList" parameterType="com.ruoyi.api.domain.BizTemplate" resultMap="BizTemplateResult">
        <include refid="selectBizTemplateVo"/>
        <where>
            del_flag = '0'
            <if test="templateName != null and templateName != ''">
                AND template_name like concat('%', #{templateName}, '%')
            </if>
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
            <if test="params.beginTime != null and params.beginTime != ''">
                AND create_time &gt;= #{params.beginTime}
            </if>
            <if test="params.endTime != null and params.endTime != ''">
                AND create_time &lt;= #{params.endTime}
            </if>
        </where>
        order by create_time desc
    </select>

    <select id="selectBizTemplateListWithRelations" parameterType="com.ruoyi.api.domain.BizTemplate" resultMap="BizTemplateWithRelationsResult">
        select 
            t.template_id, t.template_name, t.note, t.status, t.del_flag, 
            t.create_by, t.create_time, t.update_by, t.update_time, t.remark,
            tp.template_price_id, tp.template_id as tp_template_id, tp.default_item_id,
            di.template_item_id as default_item_item_id, di.item_name as default_item_name, di.size as default_item_size
        from biz_template t
        left join biz_template_price tp on t.template_id = tp.template_id and tp.del_flag = '0'
        left join biz_template_item di on tp.default_item_id = di.template_item_id and di.del_flag = '0'
        <where>
            t.del_flag = '0'
            <if test="templateName != null and templateName != ''">
                AND t.template_name like concat('%', #{templateName}, '%')
            </if>
            <if test="status != null and status != ''">
                AND t.status = #{status}
            </if>
            <if test="params.beginTime != null and params.beginTime != ''">
                AND t.create_time &gt;= #{params.beginTime}
            </if>
            <if test="params.endTime != null and params.endTime != ''">
                AND t.create_time &lt;= #{params.endTime}
            </if>
        </where>
        order by t.create_time desc
    </select>

    <insert id="insertBizTemplate" parameterType="com.ruoyi.api.domain.BizTemplate" useGeneratedKeys="true" keyProperty="templateId">
        insert into biz_template
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="templateName != null and templateName != ''">template_name,</if>
            <if test="note != null">note,</if>
            <if test="status != null">status,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="templateName != null and templateName != ''">#{templateName},</if>
            <if test="note != null">#{note},</if>
            <if test="status != null">#{status},</if>
            <if test="delFlag != null">#{delFlag},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateBizTemplate" parameterType="com.ruoyi.api.domain.BizTemplate">
        update biz_template
        <trim prefix="SET" suffixOverrides=",">
            <if test="templateName != null and templateName != ''">template_name = #{templateName},</if>
            <if test="note != null">note = #{note},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where template_id = #{templateId}
    </update>

    <update id="deleteBizTemplateById" parameterType="Long">
        update biz_template set del_flag = '2' where template_id = #{templateId}
    </update>

    <update id="deleteBizTemplateByIds" parameterType="String">
        update biz_template set del_flag = '2' where template_id in 
        <foreach item="templateId" collection="array" open="(" separator="," close=")">
            #{templateId}
        </foreach>
    </update>

    <select id="checkTemplateNameUnique" parameterType="String" resultMap="BizTemplateResult">
        select template_id, template_name from biz_template
        where template_name = #{templateName} and del_flag = '0' limit 1
    </select>

</mapper>
